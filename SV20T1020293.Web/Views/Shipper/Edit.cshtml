@model SV20T1020293.DomainModels.Shipper

@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Save" method="POST">
            <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID" />

            <div class="form-group">
                <label>Tên người giao hàng:</label>
                <input name="ShipperName" type="text" class="form-control">
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input name="Phone" type="text" class="form-control">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>

                <a href="~/Shipper" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
