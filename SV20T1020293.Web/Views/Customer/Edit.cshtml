@model SV20T1020293.DomainModels.Customer

@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Customer/Save" method="POST">
            @*@Html.ValidationSummary("", new { @style="color:#f00" })*@

            @*<input type="hidden" name="@nameof(Model.CustomerID)" value="@Model.CustomerID" />*@
            @Html.HiddenFor(m => m.CustomerID)
            
            <div class="form-group">
                <label>Tên khách hàng:</label>
                @Html.TextBoxFor(m => m.CustomerName, new { @class="form-control", @autofocus="autofocus" })
                @*<input name="@nameof(Model.CustomerName)" type="text" class="form-control" autofocus value="@Model.CustomerName">*@
                @Html.ValidationMessageFor(m => m.CustomerName, "", new { @style="color:red" })
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input name="ContactName" type="text" class="form-control" value="@Model.ContactName">
                @Html.ValidationMessage("ContactName", new { @style="color:#f00" })
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input name="Phone" type="text" class="form-control" value="@Model.Phone">
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input name="Email" type="email" class="form-control" value="@Model.Email">
                @Html.ValidationMessage(nameof(Model.Email), new { @style="color:#f00" })
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input name="Address" type="text" class="form-control" value="@Model.Address">
            </div>

            <div class="form-group">
                <label>Tỉnh/thành:</label>
                @*<select class="form-control" name="Province">
                    <option value="">-- Chọn tỉnh/thành --</option>

                    @foreach (var item in SV20T1020293.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }   
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }
                </select>*@

                @Html.DropDownListFor(m => m.Province, SelectListHelper.Provinces(), new { @class="form-control" })
                @Html.ValidationMessage("Province", new { @style="color:#f00" })
            </div>

            <div class="form-group">
                <!-- Nên thay bằng radio hoặc checkbox -->
                <label>Trạng thái:</label>
                <select class="form-control" name="IsLocked">
                    @if (Model.IsLocked)
                    {
                        <option value="false">Tài khoản không bị khóa</option>
                        <option value="true" selected>Tài khoản bị khóa</option>
                    }
                    else
                    {
                        <option value="false" selected>Tài khoản không bị khóa</option>
                        <option value="true">Tài khoản bị khóa</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>

                <a href="~/Customer" class="btn btn-default">
                    Quay lại
                </a>
            </div>
            <div class="mt-3">
                @Html.ValidationMessage("Error", new { @style = "color:#f00" })
            </div>
        </form>
    </div>
</div>
