@model SV20T1020293.DomainModels.Supplier

@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="POST">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />

            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <input name="SupplierName" type="text" class="form-control" autofocus value="@Model.SupplierName">
                @Html.ValidationMessageFor(m => m.SupplierName,"", new {@style="color:red"})
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input name="ContactName" type="text" class="form-control" value="@Model.ContactName">
                @Html.ValidationMessageFor(m => m.ContactName,"", new {@style="color:red"})
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input name="Phone" type="text" class="form-control" value="@Model.Phone">
                @Html.ValidationMessageFor(m => m.Phone,"", new {@style="color:red"})
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input name="Email" type="email" class="form-control" value="@Model.Email">
                @Html.ValidationMessageFor(m => m.Email,"", new {@style="color:red"})
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input name="Address" type="text" class="form-control" value="@Model.Address">
                @Html.ValidationMessageFor(m => m.Address,"", new {@style="color:red"})
            </div>

            <div class="form-group">
                <label>Tỉnh/thành:</label>
                @Html.DropDownListFor(m => m.Provice, SelectListHelper.Provinces(), new { @class="form-control" })
                @Html.ValidationMessage("Provice", new { @style="color:#f00" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>

                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>
            <div class="form-group">
                @Html.ValidationMessage("Error", new { @style = "color:#f00" })
            </div>
        </form>
    </div>
</div>
