@model SV20T1020293.DomainModels.Supplier

@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="POST">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />

            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <input name="SupplierName" type="text" class="form-control" autofocus value="@Model.SupplierName">
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input name="ContactName" type="text" class="form-control" value="@Model.ContactName">
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input name="Phone" type="text" class="form-control" value="@Model.Phone">
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input name="Email" type="email" class="form-control" value="@Model.Email">
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input name="Address" type="text" class="form-control" value="@Model.Address">
            </div>

            <div class="form-group">
                <label>Tỉnh/thành:</label>
                <select class="form-control" name="Provice">
                    <option>-- Chọn tỉnh/thành --</option>
                    @foreach (var item in SV20T1020293.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (item.ProvinceName == Model.Provice)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>

                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
