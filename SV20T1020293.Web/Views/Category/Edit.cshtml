@model SV20T1020293.DomainModels.Category

@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="POST">
            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" />

            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input name="CategoryName" type="text" class="form-control" autofocus value="@Model.CategoryName">
                @Html.ValidationMessageFor(m => m.CategoryName,"", new {@style="color:red"})
            </div>

            <div class="form-group">
                <label>Mô tả:</label>
                <input name="Description" type="text" class="form-control" value="@Model.Description">
                @Html.ValidationMessageFor(m => m.Description,"", new {@style="color:red"})
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>

                <a href="~/Category" class="btn btn-default">
                    Quay lại
                </a>
            </div>
            <div class="form-group">
                @Html.ValidationMessage("Error", new { @style = "color:#f00" })
            </div>
        </form>
    </div>
</div>

