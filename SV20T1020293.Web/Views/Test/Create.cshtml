@{
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Test/Save" method="POST">

            <div class="form-group">
                <label>Name:</label>
                <input name="Name" type="text" class="form-control" autofocus value="@Model.Name">
            </div>

            <div class="form-group">
                <label>Birthday:</label>
                <input name="Birthday" type="text" class="form-control date-picker" value="@Model.Birthday">
            </div>

            <div class="form-group">
                <label>Salary:</label>
                <input name="Salary" type="text" class="form-control" value="@Model.Salary">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>

            </div>
        </form>
    </div>
</div>

