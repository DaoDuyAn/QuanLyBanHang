@model SV20T1020293.DomainModels.Employee

@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="~/Employee/Save">
            <input type="hidden" name="@nameof(Model.EmployeeID)" value="@Model.EmployeeID" />
            <input type="hidden" name="@nameof(Model.Photo)" value="@Model.Photo" />

            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="FullName" autofocus value="@Model.FullName" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="BirthDate" value="@string.Format("{0:dd/MM/yyyy}", Model.BirthDate)" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Address" value="@Model.Address" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Phone" value="@Model.Phone"/>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" name="Email" value="@Model.Email" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            @if (Model.IsWorking)
                            {
                                <input type="checkbox" name="true" value="@Model.IsWorking" checked />
                                <label for="IsWorking">Nhân viên đang làm việc</label>
                            }
                            else
                            {
                                <input type="checkbox" name="false" value="@Model.IsWorking" />
                                <label for="IsWorking">Nhân viên đang làm việc</label>
                            }
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            @{
                string urlAva = string.IsNullOrEmpty(Model.Photo) ? "/images/employees/an.jpg" : Model.Photo;
            }

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="photo.png" />
                    <img id="Photo" src="@urlAva" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>