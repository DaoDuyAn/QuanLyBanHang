@model SV20T1020293.Web.Models.ProductSearchResult
@using SV20T1020293.BusinessLayers

@{
    ViewBag.Title = "Quản lý Mặt hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- Form nhập đầu vào tìm kiếm -->
        <form id="formSearch" action="~/Product" method="get">
            <div class="container-fluid row">
                <div class="col-sm-3">
                    <select class="form-control" name="categoryId">
                        @{
                            int rowCountCate = 0;
                            var lstCategory = CommonDataService.ListOfCategories(out rowCountCate, 1, 0, "");
                        }
                        <option value="0">-- Tất cả loại hàng --</option>

                        @foreach (var ca in lstCategory)
                        {
                            if (Model.CategoryId == ca.CategoryID)
                            {
                                <option value="@ca.CategoryID" selected>@ca.CategoryName</option>
                            }
                            else
                            {
                                <option value="@ca.CategoryID">@ca.CategoryName</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-sm-3">
                    <select class="form-control" name="supplierId">
                        @{
                            int rowCountSup = 0;
                            var lstSupplier = CommonDataService.ListOfSuppliers(out rowCountSup, 1, 0, "");
                        }
                        <option value="0">-- Tất cả nhà cung cấp --</option>
                        @foreach (var su in lstSupplier)
                        {
                            if (Model.SupplierId == su.SupplierID)
                            {
                                <option value="@su.SupplierID" selected>@su.SupplierName</option>
                            }
                            else
                            {
                                <option value="@su.SupplierID">@su.SupplierName</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-sm-6 input-group">
                    <input name="searchValue" type="text" class="form-control"
                           placeholder="Nhập tên mặt hàng cần tìm" value="@Model.SearchValue">
                    <div class="input-group-btn">
                        <button class="btn btn-info" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>

                        <a href="~/Product/Create" class="btn btn-primary" style="margin-left: 5px">
                            <i class="fa fa-plus"></i> Bổ sung
                        </a>
                    </div>
                </div>
            </div>
        </form>

        <!-- Hiển thị kết quả tìm kiếm -->
        <div>
            <p style="margin: 10px 0 10px 0">
                Có <strong>@Model.RowCount</strong> mặt hàng trong tổng số <strong>@Model.PageCount</strong> trang
            </p>

            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr class="bg-primary">
                            <th style="width: 80px">Ảnh</th>
                            <th style="width: auto">Tên mặt hàng</th>
                            <th style="width: 100px">Đơn vị tính</th>
                            <th style="width: 120px">Giá</th>
                            <th style="width: 100px">Ngừng bán?</th>
                            <th style="width: 80px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>
                                    @if (string.IsNullOrEmpty(item.Photo))
                                    {
                                        <img style="width: 100%;" src="~/images/employees/nophoto.png">
                                    }
                                    else
                                    {
                                        <img style="width: 100%;" src="~/images/products/@item.Photo" alt="Ảnh">
                                    }
                                </td>
                                <td>
                                    @item.ProductName
                                    <br />
                                    <i>@item.ProductDescription</i>
                                </td>
                                <td>@item.Unit</td>
                                <td>@item.Price.ToString("N0")</td>
                                <td>@(item.IsSelling ? "" : "Đã ngừng bán")</td>
                                <td class="text-right">
                                    <a href="~/Product/Edit/@item.ProductID" class="btn btn-xs btn-info">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Product/Delete/@item.ProductID" class="btn btn-xs btn-danger">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-center">
                <ul class="pagination">
                    @for (int p = 1; p <= Model.PageCount; p++)
                    {
                        if (Model.Page == p)
                        {
                            <li class="active"><a href="#">@p</a></li>
                        }
                        else
                        {
                            <li><a href="~/Product?page=@p&searchValue=@Model.SearchValue&categoryId=@Model.CategoryId&supplierId=@Model.SupplierId">@p</a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
